<resources>

    <style name="Widget.Theme.Saconet.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Saconet.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="buttonDefault">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
    </style>

    <style name="buttonPrimary" parent="buttonDefault">
        <item name="android:background">@drawable/background_button_primary</item>
    </style>

    <style name="buttonSnackBarStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/background_button_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <!-- Autres attributs souhaitÃ©s pour le style -->
    </style>

    <style name="view_style">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/color_gray_50</item>
    </style>
</resources>